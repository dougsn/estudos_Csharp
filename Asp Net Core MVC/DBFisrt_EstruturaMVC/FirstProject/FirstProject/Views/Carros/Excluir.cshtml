@model  Carro
@{
    ViewData["Title"] = "Excluir";
}

<h2>Excluir</h2>

<div class="row">

    @Html.DisplayFor(modelItem => Model.Marca)
    @Html.DisplayFor(modelItem => Model.Nome)
    @Html.DisplayFor(modelItem => Model.Ano)

</div>

<form asp-action="Excluir">

    <input type="hidden" asp-for="CarroId"/>
    <input type="submit" value="Excluir" class="btn btn-danger" />

</form>